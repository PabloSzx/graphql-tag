{
  "compilerOptions": {
    "outDir": "./lib",
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "types": ["node", "chai", "mocha"]
  },
  "include": ["src/**/*.ts"]
}
